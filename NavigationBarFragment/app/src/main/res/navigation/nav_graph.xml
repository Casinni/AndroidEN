<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentHome"
        android:name="vannes.lamy.navigationbarfragment.FragmentHome"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragmentHome_to_fragmentA2"
            app:destination="@id/fragmentA2" />
        <action
            android:id="@+id/action_fragmentHome_to_fragmentB2"
            app:destination="@id/fragmentB2" />
        <action
            android:id="@+id/action_fragmentHome_to_fragmentC2"
            app:destination="@id/fragmentC2" />
    </fragment>
    <fragment
        android:id="@+id/fragmentA2"
        android:name="vannes.lamy.navigationbarfragment.FragmentA"
        android:label="fragment_a"
        tools:layout="@layout/fragment_a" />
    <fragment
        android:id="@+id/fragmentB2"
        android:name="vannes.lamy.navigationbarfragment.FragmentB"
        android:label="fragment_b"
        tools:layout="@layout/fragment_b" />
    <fragment
        android:id="@+id/fragmentC2"
        android:name="vannes.lamy.navigationbarfragment.FragmentC"
        android:label="fragment_c"
        tools:layout="@layout/fragment_c" />
</navigation>